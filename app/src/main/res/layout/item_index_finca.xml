<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:background="@drawable/list_background">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/fincaNonmbre"
                android:textColor="@color/blanco"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="hola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fincaTelefono"
                android:textColor="@color/blanco"
                android:textSize="14sp"
                android:text="hola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fincaDireccion"
                android:textColor="@color/blanco"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:text="hola"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/equipos"
                android:textColor="@color/blanco"
                android:textSize="@dimen/item_text_size"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:text="@string/Equipos"
                android:background="@drawable/button_select_up"/>

            <Button
                android:id="@+id/usuarios"
                android:textColor="@color/blanco"
                android:textSize="@dimen/item_text_size"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/Usuarios"
                android:background="@drawable/button_select_down"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>